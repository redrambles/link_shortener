<h1>URL Shortener</h1>

<%= form_with model: Link.new do |form| %>
  <div class="flex gap-2 items-center">
    <%= form.url_field :url, required: true, placeholder: "https://yomama.com", class: "rounded flex-1" %>
    <%= form.button "Save", class: "px-3 py-2 bg-gray-100 rounded" %>
  </div>
<% end %>

<% if @links.any? %>
  <%= render "link"%>
<% end %>